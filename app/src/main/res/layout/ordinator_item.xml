<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:elevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ordinator_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop"
            android:src="@drawable/lama"
            />

        <ImageView
            android:id="@+id/like_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/not_liked"
            app:layout_constraintEnd_toEndOf="@id/ordinator_image"
            app:layout_constraintTop_toTopOf="@id/ordinator_image"
            android:layout_margin="10dp"/>


        <TextView
            android:id="@+id/ordinator_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ordinator Name"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/ordinator_image"
            app:layout_constraintStart_toStartOf="@id/ordinator_image"/>

        <TextView
            android:id="@+id/ordinator_os"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Windows Xp"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/ordinator_name"
            app:layout_constraintStart_toStartOf="@id/ordinator_image"/>


        <TextView
            android:id="@+id/ordinator_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000$"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/ordinator_os"
            app:layout_constraintStart_toStartOf="@id/ordinator_image"/>

        <TextView
            android:id="@+id/ordinator_experation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="expires in 2 yeares"
            android:textSize="20sp"
            android:textColor="#E50017"
            android:textStyle="normal"
            app:layout_constraintTop_toBottomOf="@id/ordinator_price"
            app:layout_constraintStart_toStartOf="@id/ordinator_image"/>





    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>